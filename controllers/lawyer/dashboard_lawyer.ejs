    <script>
      async function fetchLawyerData() {
        try {
          const response = await fetch("/lawyer/Dashboard_lawyer");
          if (!response.ok) {
            throw new Error("Failed to fetch user data");
          }
          let lawyerData = await response.json();
          console.log("inside lawyerData");
          updateProfile(lawyerData);
        } catch (error) {
          console.error("Error fetching user data:", error);
        }
      }

      function updateProfile(lawyerData) {
        // Update profile elements with user data
        document.getElementById("userName").textContent =
          lawyerData.name || "N/A";
        document.getElementById("userPhone").textContent =
          lawyerData.phone || "N/A";
        document.getElementById("userEmail").textContent =
          lawyerData.email || "N/A";
        document.getElementById("userState").textContent = lawyerData.state
          ? "State - " + lawyerData.state
          : "N/A";
      }

      fetchUserData();
