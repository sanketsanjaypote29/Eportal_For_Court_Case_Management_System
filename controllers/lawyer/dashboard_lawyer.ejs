          <div id="newCase" class="box22 hide">
            <div class="typeform">
              <h3>case form</h3>
              <form action="/lawyer/case" method="post">
                <div class="line">
                  <label for="district">District :</label>
                  <input type="text" name="district" required /><br />
                </div>
                <div class="line">
                  <label for="court">Court :</label>
                  <input
                    type="radio"
                    name="court"
                    value="District court"
                    id="districtCourt" />
                  <label for="districtCourt">District court</label>
                  <input
                    type="radio"
                    name="court"
                    value="High court"
                    id="highCourt" />
                  <label for="highCourt">High court</label><br />
                </div>

                <div class="line">
                  <label for="mattertype">Matter type :</label>
                  <input
                    type="radio"
                    name="matter"
                    value="Urgent"
                    id="Urgent" />
                  <label for="Urgent">Urgent</label>
                  <input
                    type="radio"
                    name="matter"
                    value="Ordinary"
                    id="Ordinary" />
                  <label for="Ordinary">Ordinary</label><br />
                </div>

                <div class="line">
                  <label for="caseType">Case type :</label>
                  <select id="caseType" name="case_type">
                    <!-- <option value="volvo"></option> -->
                    <option value="civil">Civil</option>
                    <option value="criminal">Criminal</option>
                    <option value="martial">Marital</option></select
                  ><br />
                </div>

                <div class="line">
                  <label for="court">Is MACT matter :</label>
                  <input type="radio" name="mact" value="yes" id="y" />
                  <label for="yes">Yes</label>
                  <input type="radio" name="mact" value="no" id="n" />
                  <label for="no">No</label><br />
                </div>

                <div class="line buttons">
                  <input class="btn btn-primary" type="reset" value="Reset" />
                  <button class="btn" type="submit">
                    <span class="btnText">Next</span>
                  </button>
                </div>
              </form>
            </div>
          </div>

          <div id="caseStatus" class="box33 hide">
