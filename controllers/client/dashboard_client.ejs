  <script>
    async function fetchUserData() {
      try {
        const response = await fetch("/client/dashboard_client");
        if (!response.ok) {
          throw new Error("Failed to fetch user data");
        }
        const userData = await response.json();
        console.log("inside userdata");
        updateProfile(userData);
      } catch (error) {
        console.error("Error fetching user data:", error);
      }
    }

    function updateProfile(userData) {
      // Update profile elements with user data
      document.getElementById("userName").textContent = userData.name || "N/A";
      document.getElementById("userPhone").textContent =
        userData.phone || "N/A";
      document.getElementById("userEmail").textContent =
        userData.email || "N/A";
      document.getElementById("userState").textContent = userData.state
        ? "State - " + userData.state
        : "N/A";
    }

    fetchUserData();
  </script>
  <script>
    async function fetchLawyerData() {
      try {
        const response = await fetch("/client/dashboard_client");
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        const lawyerData = await response.json();
        window.alert(JSON.stringify(lawyerData));
        // Render the lawyer data in the HTML
        lawyerData.forEach((lawyer) => {
          populateLawyerData(lawyer);
        });
      } catch (error) {
        console.error("Error fetching lawyer data:", error.message);
      }
    }

    function populateLawyerData(lawyer) {
      const lawyerContainer = document.getElementById("Find-Laywer");

      const lawlistDiv = document.createElement("div");
      lawlistDiv.classList.add("lawlist");

      const advDiv = document.createElement("div");
      advDiv.classList.add("adv");

      const img = document.createElement("img");
      img.src =
        lawyer.image ||
        "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png";
      img.alt = "";

      const lawyerInfoDiv = document.createElement("div");
      lawyerInfoDiv.classList.add("lawyer-info");

      const strong = document.createElement("strong");
      const nameParagraph = document.createElement("p");
      nameParagraph.textContent = lawyer.name || "N/A";

      const specializationParagraph = document.createElement("p");
      specializationParagraph.classList.add("small");
      specializationParagraph.textContent = lawyer.specialization || "N/A";

      const emailParagraph = document.createElement("p");
      emailParagraph.classList.add("small");
      emailParagraph.textContent = lawyer.email || "N/A";

      // Append all created elements to the lawlistDiv
      strong.appendChild(nameParagraph);
      lawyerInfoDiv.appendChild(strong);
      lawyerInfoDiv.appendChild(specializationParagraph);
      lawyerInfoDiv.appendChild(emailParagraph);
      lawlistDiv.appendChild(advDiv);
      advDiv.appendChild(img);
      lawlistDiv.appendChild(lawyerInfoDiv);

      // Append the lawlistDiv to the container
      lawyerContainer.appendChild(lawlistDiv);
    }

    fetchLawyerData();
  </script>
